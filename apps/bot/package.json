{
  "name": "@kanbal/bot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "deploy:commands": "tsx src/scripts/deploy-commands.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "prisma:migrate": "node ./scripts/prisma-runner.mjs migrate dev --schema prisma/schema.prisma",
    "prisma:studio": "node ./scripts/prisma-runner.mjs studio --schema prisma/schema.prisma",
    "healthcheck": "tsx src/scripts/healthcheck.ts"
  },
  "dependencies": {
    "@kanbal/config": "workspace:*",
    "@kanbal/core": "workspace:*",
    "@kanbal/db": "workspace:*",
    "@kanbal/logger": "workspace:*",
    "discord.js": "14.25.1",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "prisma": "^6.1.0",
    "tsx": "^4.19.2"
  }
}

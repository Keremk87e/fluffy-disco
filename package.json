{
  "name": "kanbal",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @kanbal/bot dev",
    "start": "pnpm --filter @kanbal/bot start",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "prisma:generate": "pnpm --filter @kanbal/db prisma:generate",
    "prisma:migrate": "pnpm --filter @kanbal/bot prisma:migrate",
    "pr:doctor": "node scripts/pr-doctor.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx,mts,cts,js,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx,mts,cts,js}": [
      "eslint --fix"
    ]
  }
}
